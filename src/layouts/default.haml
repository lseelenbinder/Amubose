!!!
%html
  %head
    %title Amubos&eacute; &mdash; Simple Multiple Amazon Searches
    %link{ :href => "http://fonts.googleapis.com/css?family=Cabin:400,400italic,500,500italic,600,600italic,bold,bolditalic", :rel => "stylesheet", :type => "text/css" }
    = stylesheets
    %script{ :src => "https://ajax.googleapis.com/ajax/libs/jquery/1.6.0/jquery.min.js", :type => "text/javascript"}
    = javascripts(:app, :isbn)
    :javascript
      $(document).ready(function() {
        $("textarea").focus(function() {
          if ($(this).val() == "#{ @textvalue }") {
            $(this).val("");
            $(this).toggleClass("edited", true);
          }
        })
        .blur(function() {
          if ($(this).val() == "" || $(this).val() == "#{ @textvalue }") {
            $(this).val("#{@textvalue}");
            $(this).toggleClass("edited", false);
          }
        });
        $(":submit").click(go);
      });
  %body
    %h1.logo amubos&eacute;
    = yield
